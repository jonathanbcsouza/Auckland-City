<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/BarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="BarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <!--Common Styles -->
    <style name="CityPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:paddingLeft">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CityDescriptionHeader" parent="CityPanel">
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CityPanelDescription" parent="CityPanel">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
    </style>

    <style name="CityFactHeader" parent="CityFacts">
        <item name="android:textColor">@color/backgroundSubHeaders</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CityFactPanel" parent="CityFacts">
        <item name="android:textColor">@color/colorTextSubHeaders</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="CityFacts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="list_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="list_item_image_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:tint">@color/itemsSubTitle</item>
    </style>

    <style name="detail_activity_category_text_style">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:textColor">@color/itemsTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detail_activity_place_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/tabsTitle</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="detail_activity_summary_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
        <item name="android:textColor">@color/itemsTitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="detail_activity_category_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">@dimen/activity_padding</item>
        <item name="android:textColor">@color/itemsTitle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenTheme" parent="FirebaseUI">
        <!-- Required for sign-in flow styling -->
        <item name="colorPrimary">@color/material_green_500</item>
        <item name="colorPrimaryDark">@color/material_green_700</item>
        <item name="colorAccent">@color/material_purple_a700</item>

        <item name="colorControlNormal">@color/material_green_500</item>
        <item name="colorControlActivated">@color/material_lime_a700</item>
        <item name="colorControlHighlight">@color/material_green_a200</item>
        <item name="android:windowBackground">@color/material_green_50</item>
    </style>

</resources>
