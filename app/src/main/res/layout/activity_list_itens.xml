<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_item_image"
            android:layout_width="@dimen/list_item_image_height"
            android:layout_height="@dimen/list_item_image_height"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding">

            <TextView
                android:id="@+id/list_item_title"
                style="@style/list_item_text_style"
                android:fontFamily="sans-serif"
                android:textColor="@color/itemsTitle"
                tools:text="Auckland" />

            <TextView
                android:id="@+id/list_item_description"
                style="@style/list_item_text_style"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/itemsSubTitle"
                tools:text="Centre 102" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        style="@style/list_item_image_icon_style"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />
</RelativeLayout>